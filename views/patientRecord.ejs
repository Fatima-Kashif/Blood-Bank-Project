<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood Bank Management System</title>
    <link rel="stylesheet" href="/style/styling.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="head">
            <div class="head1">
                <i class="fa-solid fa-heart-pulse fa-lg" style="color: rgb(242, 235, 235); padding-top: 10px;"></i>
                <h4 class="head4">Blood Bank Management System</h4>
            </div>
            <div class="options">
                <div class="head2">
                    <i class="fa-solid fa-sign-out" style="color: rgb(242, 235, 235);"></i>
                    <p class="head3">Log out</p>
                </div>
            </div>
        </div>
    </header>
    <div class="outer">
        <div class="box">
            <div class="sidebar">
                <ul class="sidebar-menu">
                    <li><a href="/admin"><i class="fa fa-house icon-padding"></i> Home</a></li>
                    <li><a href="/donorRecord"><i class="fa fa-user icon-padding"></i> Donor</a></li>
                    <li><a href="/patient"><i class="fa fa-user icon-padding"></i> Patient</a></li>
                    <li><a href="/stock"><i class="fa-solid fa-arrow-trend-up icon-padding"></i> Stock</a></li>
                    <li><a href="/donationrecords"><i class="fa-solid fa-clock-rotate-left icon-padding"></i> Donation Records</a></li>
                    <li><a href="/request"><i class="fa-solid fa-clock-rotate-left icon-padding"></i> Request </a></li>
                </ul>
            </div>
        </div>
        <div class="content">
            <h1>Patient Records</h1>
            <table id="patientTable">
                <thead>
                    <tr>
                        <th>Patient ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Contact No</th>
                        <th>Address</th>
                        <th>Date of Birth</th>
                    </tr>
                </thead>
                <tbody>
                    <% patientsDetails.forEach(patient => { %>
                        <tr>
                          <td><%= patient.PATIENT_ID %></td>
                          <td><%= patient.P_FIRST_NAME + ' ' + patient.P_LAST_NAME %></td>
                          <td><%= patient.P_EMAIL %></td>
                          <td><%= patient.P_GENDER %></td>
                          <td><%= patient.P_CONTACT_NO %></td>
                          <td><%= patient.P_ADDRESS %></td>
                          <td>
                            <% 
                              const date = new Date(patient.P_DOB);
                              const formattedDate = date.getFullYear() + '-' + (date.getMonth() + 1).toString().padStart(2, '0') + '-' + date.getDate().toString().padStart(2, '0');
                            %>
                            <%= formattedDate %>
                          </td> 
                        </tr>
                      <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

      const blood_group= document.getElementById("bloodGroup").value
      const units= document.getElementById("unit").value

      const data = {
            email:email,
            units:units,
            blood_group:blood_group 
          }

          console.log(data)

      fetch('/submit', {
          method: 'POST',
          headers: {
              'Content-Type': 'application/json'
          },
          body: JSON.stringify( data)
      })

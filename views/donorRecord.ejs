                <li><a href="/request"><i class="fa-solid fa-clock-rotate-left icon-padding"></i> Request </a></li>
                
            </ul>
        </div>
    </div>
        <div class="content">
            <h1>Donor Records</h1>
            <table id="donorTable">
                <thead>
                    <tr>
                        <th>Donor ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Contact No</th>
                        <th>Address</th>
                        <th>Date of Birth</th>
                    </tr>
                </thead>
                <tbody>
                    <% donorDetails.forEach(donor => { %>
                        <tr>
                          <td><%= donor.DONOR_ID %></td>
                          <td><%= donor.D_FIRST_NAME + ' ' + donor.D_LAST_NAME %></td>
                          <td><%= donor.D_EMAIL %></td>
                          <td><%= donor.D_GENDER %></td>
                          <td><%= donor.D_CONTACT_NO %></td>
                          <td><%= donor.D_ADDRESS %></td>
                          <td>
                            <% 
                              const date = new Date(donor.D_DOB );
                              const formattedDate = date.getFullYear() + '-' + (date.getMonth() + 1).toString().padStart(2, '0') + '-' + date.getDate().toString().padStart(2, '0');
                            %>
                            <%= formattedDate %>
                          </td> 
                        </tr>
                      <% }) %>
